<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Management Portal</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Mess Management Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light me-2" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-white" href="/auth/register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="display-4">Welcome to the Mess Management Portal</h1>
            <p class="lead">Your one-stop solution for managing all your mess-related activities efficiently and effortlessly.</p>
            <a href="/auth/register" class="btn btn-light btn-lg">Get Started</a>
        </div>
    </div>

    <!-- Student Features Section -->
    <div class="container py-5">
        <h2 class="text-center mb-4 fw-bold">As a student you can</h2>
        <div class="row g-4">
            <!-- Mess Schedules -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-calendar3"></i>
                    <h5 class="card-title mt-3">View Mess Schedules</h5>
                    <p class="card-text">Keep track of daily mess schedules effortlessly.</p>
                </div>
            </div>

            <!-- Mess Menus -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-book-half"></i>
                    <h5 class="card-title mt-3">View Mess Menus</h5>
                    <p class="card-text">Explore delicious and nutritious menu options daily.</p>
                </div>
            </div>

            <!-- Notices -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-bell"></i>
                    <h5 class="card-title mt-3">Important Notices</h5>
                    <p class="card-text">Stay updated with the latest mess notices and announcements.</p>
                </div>
            </div>

            <!-- Feedback -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-chat-square-text"></i>
                    <h5 class="card-title mt-3">Submit Feedback</h5>
                    <p class="card-text">Share your valuable feedback to improve our services.</p>
                </div>
            </div>

            <!-- Rebates -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-cash"></i>
                    <h5 class="card-title mt-3">Apply for Rebates</h5>
                    <p class="card-text">Easily apply for mess rebates when you're away.</p>
                </div>
            </div>

            <!-- Rebate Status -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-info-circle"></i>
                    <h5 class="card-title mt-3">View Your Rebate Status</h5>
                    <p class="card-text">Check the status of your submitted rebate applications.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Committee Features Section -->
    <div class="container py-5 ">
        <h2 class="text-center mb-4 fw-bold">As a committee member you can</h2>
        <div class="row g-4">
            <!-- Update Mess Timings and Menu -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-pencil-square"></i>
                    <h5 class="card-title mt-3">Update Mess Timings and Menu</h5>
                    <p class="card-text">Manage and update mess schedules and daily menu options.</p>
                </div>
            </div>

            <!-- Review Students Feedback -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-chat-dots"></i>
                    <h5 class="card-title mt-3">Review Students Feedback</h5>
                    <p class="card-text">Read and respond to feedback submitted by students.</p>
                </div>
            </div>

            <!-- Review Rebate Applications -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-check-square"></i>
                    <h5 class="card-title mt-3">Review Rebate Applications</h5>
                    <p class="card-text">Handle and approve rebate applications submitted by students.</p>
                </div>
            </div>

            <!-- Post Notices -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-exclamation-circle"></i>
                    <h5 class="card-title mt-3">Post Important Notices</h5>
                    <p class="card-text">Share updates and announcements with all mess members.</p>
                </div>
            </div>

            <!-- Track Expenses -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-graph-up"></i>
                    <h5 class="card-title mt-3">Track Expenses</h5>
                    <p class="card-text">Monitor and manage mess expenses effectively.</p>
                </div>
            </div>

            <!-- Manage Inventory -->
            <div class="col-md-4">
                <div class="card feature-card h-100" onclick="promptLogin()">
                    <i class="icon bi bi-box-seam"></i>
                    <h5 class="card-title mt-3">Manage Inventory</h5>
                    <p class="card-text">Keep track of stock levels and manage mess supplies.</p>
                </div>
            </div>
        </div>
  </div>

    <!-- Footer -->
    <footer class="text-center py-3">
        <div class="container">
            <p>&copy; 2025 Mess Management Portal. All rights reserved.</p>
        </div>
    </footer>
        
    <!-- Bootstrap JS --> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Prompt user to log in when clicking a card
        function promptLogin() {
            alert('Please log in to access this feature!');
            window.location.href = '/auth/login';
        }

        // Add animation to feature cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.feature-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('fade-in');
                }, index * 100);
            });
        });
    </script>
</body>
</html>
